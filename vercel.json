{
  "version": 2,
  "buildCommand": "npm run build:production",
  "outputDirectory": "build",
  "functions": {
    "api/index.ts": {
      "memory": 512,
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/:host([^/]+)", "destination": "https://template-fmcg.vercel.app/:host" },
    { "source": "/:host([^/]+)/:path(.*)", "destination": "https://template-fmcg.vercel.app/:host/:path" },
    { "source": "/api/(.*)", "destination": "/api/index.ts" },
    { "source": "/((?!api/|_next/|assets/|uploads/|.*\\..*).*)", "destination": "/index.html" }
  ]
}