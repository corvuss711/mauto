# AI Website Builder Configuration
# Copy this file to .env.local and fill in your actual values

# Hostinger API Configuration
HOSTINGER_API_KEY=your_hostinger_api_key_here
HOSTINGER_EMAIL=admin@manacle.in
WP_USERNAME=admin
WP_APP_PASSWORD=your_wordpress_app_password_here

# WordPress Multisite Configuration
WP_URL=http://localhost/wordpress

# Razorpay Configuration (for testing)
RAZORPAY_KEY_ID=rzp_test_YOUR_KEY_ID
RAZORPAY_KEY_SECRET=YOUR_KEY_SECRET

# For production, use live keys:
# RAZORPAY_KEY_ID=rzp_live_YOUR_LIVE_KEY_ID
# RAZORPAY_KEY_SECRET=YOUR_LIVE_KEY_SECRET

# Paytm Payment Gateway Configuration
# Get these from Paytm Dashboard: https://dashboard.paytm.com/next/apikeys
PAYTM_MID=your_merchant_id_here
PAYTM_MERCHANT_KEY=your_merchant_key_here
PAYTM_WEBSITE=WEBSTAGING
PAYTM_CHANNEL_ID=WEB
PAYTM_INDUSTRY_TYPE_ID=Retail
# For local testing with ngrok (replace with your ngrok URL)
PAYTM_CALLBACK_URL=https://your-ngrok-url.ngrok-free.app/api/paytm/callback
# For localhost testing (won't work with Paytm callbacks)
# PAYTM_CALLBACK_URL=http://localhost:8080/api/paytm/callback
PAYTM_TXN_URL=https://securegw-stage.paytm.in/theia/processTransaction
PAYTM_STATUS_QUERY_URL=https://securegw-stage.paytm.in/order/status

# For production, use these URLs:
# PAYTM_WEBSITE=DEFAULT
# PAYTM_TXN_URL=https://securegw.paytm.in/theia/processTransaction
# PAYTM_STATUS_QUERY_URL=https://securegw.paytm.in/order/status
# PAYTM_CALLBACK_URL=https://yourproductiondomain.com/api/paytm/callback

# OpenAI API Configuration (Optional - for enhanced AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Site Generation Settings
SITE_BUILD_TIMEOUT=300000
PREVIEW_DOMAIN=manacle.dev
DEPLOYMENT_TIMEOUT=60000

# Development Settings
NODE_ENV=development
DEBUG=true 

# Database
MYSQL_URL=mysql://user:pass@localhost:3306/mauto

# Sessions
SESSION_SECRET=change_me

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Public base URL for OAuth callback; for local dev use http://localhost:8080
BASE_URL=http://localhost:8080
# If front-end and API are on different sites in production, set CROSS_SITE=true to enable sameSite=None cookies
CROSS_SITE=false