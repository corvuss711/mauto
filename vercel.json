{
  "version": 2,
  "buildCommand": "npm run build:production",
  "outputDirectory": "build",
  "functions": {
    "api/index.ts": {
      "memory": 512,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/:host([^/]*\\.[^/]*)",
      "destination": "https://template-fmcg.vercel.app/:host"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/((?!api/|_next/|assets/|uploads/|.*\\..*).*)",
      "destination": "/index.html"
    }
  ]
}